<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../styles/reset.css">
    <link rel="stylesheet" href="/styles/style.css">
    <title>Show Books</title>
</head>
<body>
    <%- include('../../layout/header')  %>
    

        <% mylist.forEach(book => { %>
            <section>
               <img id="show" src="<%= book.image_url %>"> 
               <h2 id="show"><%=book.title %></h2>
               <h3 id="show"><%=book.author%></h3>
               <p id="show"><%=book.description%></p>
               <form id="show" action="/addBooks" method="post">
                   <input type="hidden" name="image_url" value="<%= book.image_url%>">
                   <input type="hidden" name="title" value="<%= book.title%>">
                   <input type="hidden" name="author" value="<%= book.author%>">
                   <input type="hidden" name="description" value="<%= book.description%>">
                   <input type="hidden" name="isbn" value="<%= book.isbn%>">
                   <button class="addbtn" type="submit">Select Book</button>
               </form></section>
           
       <% }) %>
</body>
</html>